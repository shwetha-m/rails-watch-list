<p><%= @list.name %><p>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li><%= bookmark.movie.title %>
    <%= link_to bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'} do %>
      <i class="fa-sharp-duotone fa-solid fa-trash-can"></i>
    <% end %></li>
  <% end %>
</ul>

<p><%= link_to "Add a movie to this list", new_list_bookmark_path(@list) %></p>
<p><%= link_to "Back to the list", lists_path %></p>
